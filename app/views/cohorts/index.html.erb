<h1>Listing cohorts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Creator</th>
      <th>Date created</th>
      <th>Voided</th>
      <th>Voided by</th>
      <th>Date voided</th>
      <th>Void reason</th>
      <th>Changed by</th>
      <th>Date changed</th>
      <th>Uuid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.description %></td>
        <td><%= cohort.creator %></td>
        <td><%= cohort.date_created %></td>
        <td><%= cohort.voided %></td>
        <td><%= cohort.voided_by %></td>
        <td><%= cohort.date_voided %></td>
        <td><%= cohort.void_reason %></td>
        <td><%= cohort.changed_by %></td>
        <td><%= cohort.date_changed %></td>
        <td><%= cohort.uuid %></td>
        <td><%= link_to 'Show', cohort %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

