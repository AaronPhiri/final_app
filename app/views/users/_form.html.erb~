			<tr>
				    <th><%= f.label :person_id,("Person Id :") %></th>
		
				    <td><%= f.select(:person_id,@person.map{|p| [p.id,p.id]}) %></td>
        
      </tr>

			<tr>
				    <th> <%= f.label :retired,("Retired :")%></th>
		
