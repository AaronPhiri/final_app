   		<tr>
				    <th><%= f.label :password_confirmation,("Confirm Password		:") %></th>
		
				    <td><%= f.text_field :password_confirmation %></td>
        
      </tr>
 
   		<tr>
				    <th><%= f.label :secret_question,("Secret Question	:") %></th>
		
				    <td><%= f.text_field :secret_question %></td>
        
      </tr>

   		<tr>
				    <th><%= f.label :secret_answer,("Secret Answer :") %></th>
		
				    <td><%= f.text_field :secret_answer %></td>
        
